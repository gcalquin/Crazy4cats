

<h1>Home#index</h1>

<hr>

<% if user_signed_in?%>

    <%= render "publications/form", publication: @publication %>
  
<% end %>

<hr>



<div class="row">
<% @publications.each do |publication| %>
<div class="col-12 border border-info p-3 mt-2">
    <%= publication.content %> 
    <hr>
    <div class="float-right">
       <%= publication.likes.count %> 
       <% if publication.is_liked?(current_user) %>
        <%= link_to '<i class="far fa-heart text-danger"></i>'.html_safe, publication_likes_path(publication), data: { "turbo-method": :post } %> 
       <% else %>
        <%= link_to '<i class="fas fa-heart text-danger"></i>'.html_safe, publication_likes_path(publication), data: { "turbo-method": :post } %> 
       <% end %>
        


       likes / 0 republicaciones
    </div>
</div>

<%end %>
</div>


